                                    img
                            .text_identity.col-lg-8
                                .name.col-lg-12
                                    h1 RONALD MARCEL
                                .statut.col-lg-12
                                    span Developpeur Front-End | Designer Produit
                                .website.col-lg-12
                                    span.www ronaldmarcel.com
                        .info.col-lg-4.text-right
                            .birth
                                p 30 ans - 28/06/1986
                            .phone
                                p 06 84 18 69 59
                            .email
                                p ronald.marcel.mr@gmail.com
                            .mobility
                                p
                            address.contact_details
