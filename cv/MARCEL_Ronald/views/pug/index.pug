doctype html
html
    head
        meta(charset='utf8')
        meta(language='FR')
        meta(author='Ronald MARCEL')
        link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet')
        link(href='build/css/style.css' rel='stylesheet')
        body
            //MIXIN
            mixin formation(what, where, details)
                    .formation.col-lg-10.col-lg-offset-2
                        .what.col-lg-12
                            h3= what 
                        .where.col-lg-12
                            p= where
                        .details.col-lg-12
                            p= details
                            
            mixin experience( what, where, month, year, details)
                    .experience.col-lg-10.col-lg-offset-1
                        .intitule_experience.col-lg-9
                            .what
                                h3= what
                            .where
                                p.place= where
                            .details
                                p.desc= details
                        .periode.col-lg-3.text-center
                            .when
                                span.month.col-lg-12= month
                                span.year.col-lg-12= year
            .wrapper.container-fluid
                .page.row
                    section.aboutme.col-lg-12
                        .identity.col-lg-8
                            //.graphic_identity.col-lg-4
